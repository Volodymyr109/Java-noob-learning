import java.util.ArrayList;

public class Main {

    public static void main(String[] args) {

        ArrayList<Integer> numbers = new ArrayList<>();

        numbers.add(5);
        numbers.add(8);
        numbers.add(9);
        numbers.add(2);
        numbers.add(4, 555);

        System.out.println("Numbers from collection: " + numbers);
        System.out.println("Size of a collection: " + numbers.size());
        System.out.println("Get num with index (1): " + numbers.get(1));
        System.out.println("Num with index (1) removed: " + numbers.remove(1));
        System.out.println("Numbers from collection after removed (1): " + numbers);


        for (Integer el : numbers) {
            System.out.println("El with for: " + el);
        }
    }
}
